<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ejerciciofinal.ReceiveUserLoginFragment">

    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvUserData"
            android:text="¡Bienvenid@!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"
            android:layout_width="180dp"
            android:layout_below="@+id/tvUserData"
            android:layout_marginTop="30dp"
            android:layout_height="180dp" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="18sp"
            android:layout_below="@id/ivUserPhoto"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvUserPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textSize="18sp"
            android:layout_below="@id/tvUserEmail"
            android:layout_marginTop="20dp" />

    </RelativeLayout>


</FrameLayout>