<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ejerciciofinal.HomeScreenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <!-- User Data Section -->

        <LinearLayout
            android:id="@+id/userDataSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/tvUserData"
                android:text="@string/label_user_signed_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/ivUserPhoto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/verified_user"
                android:contentDescription="@string/image_registered_user"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_name"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_last_name"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_title"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_email"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sex"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_password"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </ScrollView>

        <!-- Login Data Section -->
        <LinearLayout
            android:id="@+id/loginDataSection"
            android:paddingHorizontal="20dp"
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvUserLogin"
                android:text="@string/label_welcome"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivUserPhotoLogin"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user"
                android:layout_width="180dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/image_login_description"
                android:layout_height="180dp" />

            <TextView
                android:id="@+id/tvUserEmailLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_email"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tvUserPasswordLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_password"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

</FrameLayout>